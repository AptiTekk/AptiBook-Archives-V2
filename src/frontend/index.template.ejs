    <style type="text/css">
        body > app:empty {
            background-color: rgba(66, 114, 183, 0.3);
        }

        #loading {
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;

            opacity: 0;
            pointer-events: none;
            transition: opacity linear 0.5s;
        }

        app:empty + #loading {
            opacity: 1;
        }

        #loading-background {
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            background-image: url('images/loading/background.jpg');
            background-position: bottom center;
            background-size: cover;
            background-repeat: no-repeat;

            z-index: 10000;

            animation: fadein 0.5s;
        }

        #loading-color-overlay {
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;

            z-index: 10001;

            background-color: rgba(66, 114, 183, 0.3);
        }

        #loading-foreground {
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;

            z-index: 10002;

            background-image: url('images/loading/logo.svg');
            background-position: center center;
            background-size: 10%;
            background-repeat: no-repeat;
        }

        @keyframes fadein {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
<app></app>

<div id="loading">
    <div id="loading-background">
    </div>
    <div id="loading-color-overlay">
    </div>
    <div id="loading-foreground">
    </div>
</div>
</body>
</html>
